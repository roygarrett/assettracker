<h1>Dashboard</h1>
<br>
<div id="dashboard">
  <h2>Device Usage</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Total</th>
        <th scope="col">Assigned</th>
        <th scope="col">Available</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |c| %>
        <tr>
          <td><%= c.name %></td>
          <td><%= c.devices.count %></td>
          <td><%= c.devices.where.not({ :employee_id => nil }).count %></td>
          <td><%= c.devices.where({ :employee_id => nil }).count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div id="dashboard">
  <h2>Software Compliance</h2>
  <table class="table table-striped table-bordered">
    <thead>
      <th scope="col">Name</th>
      <th scope="col">License Count</th>
      <th scope="col">Employee Count</th>
      <th scope="col">Compliant?</th>
    </thead>
    <tbody>
      <% @softwares.each do |s| %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.license_count %></td>
          <td><%= s.employees.count %></td>
          <td><%= s.compliant? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
